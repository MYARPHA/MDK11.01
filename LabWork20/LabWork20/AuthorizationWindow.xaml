<Window x:Class="LabWork20.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork20"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="250" Width="500">
    <StackPanel>
        <Label Content="Логин"/>
        <TextBox x:Name="LoginTextBox"/>
        <Label Content="Пароль"/>
        <TextBox x:Name="PasswordTextBox"/>
        <Button Content="OK" x:Name="OkButton" Click="OkButton_Click"/>
        <Button Content="Отмена" x:Name="CancelButton" Click="CancelButton_Click"/>
    </StackPanel>
</Window>
