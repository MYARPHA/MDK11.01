<Window x:Class="LabWork22.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork22"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Номер билета"/>
        <TextBox x:Name="TicketNumberTextBox"/>
        <Label Content="Название фильма"/>
        <TextBox x:Name="MovieTitleTextBox"/>
        <Label Content="Начало сеанса"/>
        <DatePicker Name="SessionTimeDatePicker"/>
        <Label Content="Кинотеатр"/>
        <TextBox x:Name="CinemaNameTextBox"/>
        <Label Content="Зал"/>
        <TextBox x:Name="HallNumberTextBox"/>
        <Label Content="Ряд"/>
        <TextBox x:Name="RowNumberTextBox"/>
        <Label Content="Место"/>
        <TextBox x:Name="SeatNumberTextBox"/>
        <Button x:Name="SaveButton" Content="Сохранить билет" Click="SaveButton_Click"></Button>
    </StackPanel>
</Window>
