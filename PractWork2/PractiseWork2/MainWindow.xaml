<Window x:Class="PractiseWork2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PractiseWork2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="FilmsDataGrid"/>
        <StackPanel Grid.Column="1">
            <Label Content="Film Info:"/>
            <TextBox x:Name="FilmInfoTextBox"/>
            <Label Content="Title:"/>
            <TextBox x:Name="TitleTextBox"/>
            <Label Content="Age Rating:"/>
            <TextBox x:Name="AgeRatingTextBox"/>
            <Button x:Name="AddButton" Content="Добавить" Click="AddButton_Click"/>
            <Button x:Name="LoadByIdButton" Content="Загрузить фильм по Id" Click="LoadByIdButton_Click"/>
            <Button x:Name="UpdateButton" Content="Обновить" Click="UpdateButton_Click"/> 
            <Button x:Name="DeleteButton" Content="Удалить" Click="DeleteButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
